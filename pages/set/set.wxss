/* pages/set/set.wxss */
.container {
    box-sizing: border-box;
    padding: 0rpx 48rpx;
}
.set-wrap .operation-list .operation-item {
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    border-bottom: 2rpx solid #363c45;
    color: #dcdeea;
}
.set-wrap .operation-list .operation-item .option{
    flex: 1;
}

.set-wrap .operation-list .operation-item .iconfont {
    font-size: 28rpx;
    color: #a2a8ba;
}
.set-wrap .operation-list .operation-item .btn{
    width: 102rpx;
    height: 62rpx;
    background: #fb6894;
    border-radius: 50rpx;
    position: relative;
}
.set-wrap .operation-list .operation-item .btn .cyc{
    width: 56rpx;
    height: 56rpx;
    position: absolute;
    background-color: #fff;
    border-radius: 50rpx;
    top: 3rpx;
    bottom: 3rpx;
    left: 3rpx;
}

.set-wrap .operation-list .operation-item .balance{
    margin-right: 10rpx;
}
.log-out{
    width: 100%;
    height: 140rpx;
    position: fixed;
    bottom: 40rpx;
    text-align: center;
    line-height: 140rpx;
    background: #2e363f;
}