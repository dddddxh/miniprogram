/* pages/shopping/shopping.wxss */

.hot-ranking-item {
    /* float: left; */
    background-color: #2b323b;
    border-radius: 12rpx;
    width: 654rpx;
    height: 250rpx;
    position: relative;
    margin: 92rpx auto;
}

.hot-ranking-item image {
    width: 168rpx;
    height: 250rpx;
    border-radius: 12rpx;
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    margin-right: 30rpx;
}

.hot-ranking-item .detail-wrap {
    float: right;
    margin-right: 24rpx;
    width: 400rpx;
    border-bottom: 2px solid #363d47;
}

.hot-ranking-item .detail-wrap .book-name {
    display: flex;
    justify-content: space-between;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
}

.hot-ranking-item .detail-wrap .book-name .menu {
    /* line-height: 22rpx; */
    color: #969baf;
    font-size: 26rpx;
    font-weight: bold;
}

.hot-ranking-item .detail-wrap .author-name {
    font-size: 26rpx;
    color: #5d637c;
    margin-bottom: 25rpx;
}

.hot-ranking-item .detail {
    float: right;
    margin-right: 24rpx;
    width: 400rpx;
    font-size: 52rpx;
    color: #ff1d8d;
    display: flow-root;
}
.bottom{
    position: fixed;
    bottom: 0rpx;
    width: 100%;
    z-index: 999;
}
.bottom .price-wrap{
    box-sizing: border-box;
    padding: 0 48rpx;
    display: flex;
    justify-content: space-between;

}
.bottom .price-wrap .price{
    color: #ff1d8d;
}
.bottom .btn-buy{
    height: 140rpx;
    line-height: 140rpx;
    background-color: #ff1d8d;
    text-align: center;
    margin-top: 45rpx;
}
