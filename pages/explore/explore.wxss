/* pages/explore/explore.wxss */

.custom {
    position: fixed;
    top: 0rpx;
    z-index: 9999;
    width: 100%;
    background-color: #21272e;
}

.view-change {
    position: fixed;
    background-color: #21272e;
    width: 100%;
}

.view-change .title {
    display: block;
    text-align: center;
    transform: translateY(-38rpx);
    position: relative;
    z-index: 998;
    font-size: 26rpx;
}

.view-change .iconfont {
    font-size: 28rpx;
    color: #71768c;
    padding-left: 24rpx;
    position: relative;
    z-index: 999;
}

.view-change .active {
    color: #fff;
}

.content {
    text-align: center;
    
}

.content .book-cover {
    margin-top: 260rpx;
}

.book-cover image {
    width: 390rpx;
    height: 580rpx;
}

.content .book-detail {
    width: 390rpx;
    margin: auto;
    border-bottom: 2rpx solid #2e3640;
}

.content .book-detail .book-name {
    margin-top: 48rpx;
}

.content .book-detail .author {
    margin-top: 34rpx;
    margin-bottom: 72rpx;
    color: #656a7b;
    font-size: 28rpx;
}

.reader-wrap {
    position: relative;
}

.reader-wrap .reader-list {
    text-align: center;
    margin-top: 48rpx;
}

.reader-wrap .reader-list .reader-item {
    display: inline-block;
    margin: 0px 6rpx;
}

.reader-wrap .reader-list .reader-item image {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50rpx;
}

.reader-wrap .count {
    color: #a2a8ba;
    text-align: center;
    font-size: 24rpx;
    margin-top: 38rpx;
}

.reader-wrap .count .num {
    padding-right: 10rpx;
}

.reader-wrap .recommend {
    width: 240rpx;
    position: absolute;
    right: 0rpx;
    height: 84rpx;
    background-color: rgba(0, 0, 0, 0.4);
    border-top-left-radius: 50rpx;
    border-bottom-left-radius: 50rpx;
}

.reader-wrap .recommend image {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50rpx;
    margin: 8rpx;
}

.reader-wrap .recommend .rec-name {
    display: inline-block;
    font-size: 28rpx;
    transform: translateY(-14rpx);
}

.reader-wrap .recommend .rec-name .act {
    color: #a2a8ba;
    font-size: 24rpx;
}

.book-wrap .book-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0px 92rpx;
    margin-top: 200rpx;
}

.book-wrap .book-list .book-item {
    text-align: center;
    margin-bottom: 82rpx;
}

.book-wrap .book-list .book-item image {
    width: 268rpx;
    height: 400rpx;
}

.book-wrap .book-list .book-item .book-name {
    margin-top: 26rpx;
}